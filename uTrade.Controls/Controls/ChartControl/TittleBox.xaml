<UserControl x:Class="uTrade.Controls.TittleBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:uTrade.Controls.Charting"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="300">
    <Grid Background="Azure">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"></Grid>
        <StackPanel Name="TittlePanel" Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Orientation="Horizontal"/>
        <StackPanel Grid.Column="2" HorizontalAlignment="Stretch" Margin="0,0,0,0" FlowDirection="LeftToRight" Orientation="Horizontal">
            <Button x:Name="btn_params" Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Top" Width="16">
                <Image Source="/uTrade.Controls;component/Resource/Resources.ico"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
